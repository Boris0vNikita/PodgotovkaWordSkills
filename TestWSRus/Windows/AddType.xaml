<Window x:Class="TestWSRus.Windows.AddType"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestWSRus.Windows"
        mc:Ignorable="d"
        Title="AddType" Height="150" Width="400">
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <Label Content="Название типа продукта:" HorizontalAlignment="Right"/>
                <TextBox Name="txbNameTypeProduct" Width="150" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Name="btnAdd" Content="Добавить" Width="100" Margin="0,0,20,0" MinHeight="30" MinWidth="100" Click="btnAdd_Click"  />
                <Button Name="btnCancel" Content="назад" Width="100" MinHeight="30" MinWidth="100" Click="btnCancel_Click"  />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
