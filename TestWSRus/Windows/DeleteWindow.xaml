<Window x:Class="TestWSRus.Windows.DeleteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestWSRus.Windows"
        mc:Ignorable="d"
        Title="Удаление" Height="200" Width="400" MaxHeight="200" MaxWidth="400" MinHeight="200" MinWidth="400">
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Label Content="Вы действительно хотите удалить заказ?"/>
                <Label Content="ID ="/>
                <Label Content="x" Name="lblIdOrder"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Name="btnYes" Content="Да" Width="30" Click="btnYes_Click"/>
                <Button Name="btnNo" Content="Нет" Width="30" Click="btnYes_Click" Margin="20,0,0,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
